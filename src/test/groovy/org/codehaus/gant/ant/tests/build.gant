import org.codehaus.gant.ant.tests.Gant_Test

target ( test : 'A test target in the default file.' ) { Gant_Test.returnValue = test_description }

target ( blah : 'Another target in the default file.' ) { Gant_Test.returnValue = blah_description }

target ( gantTaskdef : 'Check that a taskdef works.' ) {
  taskdef ( name : 'groovy' , classname: 'org.codehaus.groovy.ant.Groovyc' ) {
    classpath {
      pathelement ( location : '../../../../../../../../target/classes' )
      fileset ( dir : Ant.project.properties.'environment.GROOVY_HOME' + '/lib' , includes : 'groovy*.jar' )
      fileset ( dir : Ant.project.properties.'environment.GROOVY_HOME' + '/lib' , includes : 'asm*.jar' )
      fileset ( dir : Ant.project.properties.'environment.GROOVY_HOME' + '/lib' , includes : 'commons*.jar' )
      fileset ( dir : Ant.project.properties.'environment.GROOVY_HOME' + '/lib' , includes : 'antlr*.jar' )
    }
  }
  Gant_Test.returnValue = 'OK.'
}

setDefaultTarget ( test )
