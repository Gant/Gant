<project name="Basedir_Tests" xmlns:artifact="urn:maven-artifact-ant" basedir="." >

  <echo>basedir::ant basedir=${basedir}</echo>

  <property name ="toplevelDirectory" value="../../../../../../../.."/>

  <property file="${toplevelDirectory}/local.build.properties"/>
  <property file="${toplevelDirectory}/build.properties"/>

  <property environment="environment"/>

  <property name="classesDirectory" value="${toplevelDirectory}/target_gant/classes"/>

  <condition property="groovyHomeIsSet">
    <isset property="environment.GROOVY_HOME"/>
  </condition>

  <target name="-initializeWithGroovyHome" if="groovyHomeIsSet">
    <path id="classpathId">
      <pathelement location="${classesDirectory}"/>
      <fileset dir="${environment.GROOVY_HOME}/lib" includes="groovy-*.jar"/>
      <fileset dir="${environment.GROOVY_HOME}/lib" includes="commons-cli*.jar"/>
      <fileset dir="${environment.GROOVY_HOME}/lib" includes="asm*.jar"/>
      <fileset dir="${environment.GROOVY_HOME}/lib" includes="antlr*.jar"/>
    </path>
  </target>

  <target name="-initializeNoGroovyHome" unless="groovyHomeIsSet">
    <path id="mavenAntTaskJarPathId">
      <fileset dir="${toplevelDirectory}/jarfiles" includes="maven-ant-tasks-*.jar"/>
    </path>
    <typedef resource="org/apache/maven/artifact/ant/antlib.xml" uri="urn:maven-artifact-ant" classpathref="mavenAntTaskJarPathId"/>
    <property file="${toplevelDirectory}/${groovyAntTaskTestVersionPropertyFileName}"/>
    <artifact:dependencies pathId="groovyJarsId">
      <dependency groupId="org.codehaus.groovy" artifactId="groovy-all" version="${groovyAntTaskTestVersion}"/>
    </artifact:dependencies>
    <path id="classpathId">
      <pathelement location="${classesDirectory}"/>
      <path refid="groovyJarsId"/>
    </path>
  </target>

  <target name="-defineGroovyTask">
    <taskdef name="groovy" classname="org.codehaus.groovy.ant.Groovy" classpathref="classpathId" />
  </target>

  <target name="-defineGantTask">
    <taskdef name="gant" classname="org.codehaus.gant.ant.Gant" classpathref="classpathId"/>
  </target>

  <target name="defaultProject" depends="-initializeWithGroovyHome,-initializeNoGroovyHome,-defineGroovyTask">
    <groovy>
      println ( "basedir::groovy basedir=${ant.project.properties.basedir}" )
      def gant = new gant.Gant ( )
      gant.loadScript ( new File ( ant.project.properties.'basedir' + '/basedir.gant' ) )
      gant.processTargets (  )
    </groovy>
  </target>
  
  <target name="explicitProject" depends="-initializeWithGroovyHome,-initializeNoGroovyHome,-defineGroovyTask">
    <groovy>
      println ( "basedir::groovy basedir=${ant.project.properties.basedir}" )
      def gant = new gant.Gant ( ant.project )
      gant.loadScript ( new File ( ant.project.properties.'basedir' + '/basedir.gant' ) )
      gant.processTargets (  )
    </groovy>
  </target>
  
  <target name="gantTask" depends="-initializeWithGroovyHome,-initializeNoGroovyHome,-defineGantTask">
    <gant file="basedir.gant"/>
  </target>
  
</project>
