<project name="Basedir_Tests" xmlns:artifact="urn:maven-artifact-ant" basedir="." >

  <echo>basedir::ant basedir=${basedir}</echo>

  <import file="commonBits.xml"/>
  
  <target name="-defineClasspath" depends="-initializeWithGroovyHome,-initializeNoGroovyHome">
    <path id="classpathId">
      <pathelement location="${gantClassesDirectory}"/>
      <path refid="groovyJarsId"/>
    </path>
  </target>
  
  <target name="defaultProject" depends="-initializeWithGroovyHome,-initializeNoGroovyHome,-defineGroovyTask,-defineClasspath"> 
    <groovy classpathref="classpathId">
      println ( "basedir::groovy basedir=${ant.project.properties.basedir}" )
      def gant = new gant.Gant ( )
      gant.loadScript ( new File ( ant.project.properties.'basedir' + '/basedir.gant' ) )
      gant.processTargets (  )
    </groovy>
  </target>
  
  <target name="explicitProject" depends="-initializeWithGroovyHome,-initializeNoGroovyHome,-defineGroovyTask,-defineClasspath">
    <groovy classpathref="classpathId">
      println ( "basedir::groovy basedir=${ant.project.properties.basedir}" )
      def gant = new gant.Gant ( ant.project )
      gant.loadScript ( new File ( ant.project.properties.'basedir' + '/basedir.gant' ) )
      gant.processTargets (  )
    </groovy>
  </target>
  
  <target name="gantTask" depends="-initializeWithGroovyHome,-initializeNoGroovyHome,-defineGantTask">
    <gant file="basedir.gant"/>
  </target>
  
</project>
